<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Theme.ReSift" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary -->
		<item name="colorOnPrimary">@color/white</item>
		<item name="colorPrimary">@color/gray</item>
		<item name="colorPrimaryVariant">@color/black</item>

		<!-- Secondary -->
		<item name="colorOnSecondary">@color/white</item>
		<item name="colorSecondary">@color/gray</item>
		<item name="colorSecondaryVariant">@color/gray_dark</item>

		<!-- Background -->
		<item name="color">@color/gray_dark</item>
		<item name="colorOnBackground">@color/white</item>

		<!-- Surface -->
		<item name="colorOnSurface">@color/white</item>
		<item name="colorSurface">@color/gray</item>

		<!-- Error -->
		<item name="colorError">@color/red</item>
		<item name="colorOnError">@color/white</item>

		<!-- Status -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

		<!-- Other -->
		<item name="android:background">?attr/color</item>
		<item name="android:textColor">?attr/colorOnBackground</item>
	</style>
</resources>
