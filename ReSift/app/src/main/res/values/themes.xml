<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Theme.App" parent="Theme.MaterialComponents.NoActionBar">
		<!-- Error -->
		<item name="colorOnError">@color/white</item>
		<item name="colorError">@color/carmine</item>

		<!-- Accent -->
		<item name="colorAccent">@color/dodger_blue</item>

		<!-- Status Bar -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

		<!-- Toolbar -->
		<item name="android:textColorSecondary">?attr/colorOnPrimary</item>
	</style>
	<style name="Theme.App.DayNight" parent="Theme.App.Light" />
	<style name="Theme.Popup" parent="Widget.Material3.PopupMenu">
		<item name="android:background">?colorSurface</item>
		<item name="android:textColor">?attr/colorOnSurface</item>
		<item name="colorAccent">?attr/colorOnSurface</item>
		<item name="colorControlActivated">?attr/colorOnSurface</item>
		<item name="popupMenuBackground">?colorSurface</item>
		<item name="tint">?attr/colorOnSurface</item>
	</style>
</resources>
