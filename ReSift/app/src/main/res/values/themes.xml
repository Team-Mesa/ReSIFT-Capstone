<!-- https://material.io/resources/color/#!/?view.left=0&view.right=0&primary.color=4B2E83&secondary.color=B7A57A -->
<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Theme.ReSift" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary -->
		<item name="colorOnPrimary">@color/white</item>
		<item name="colorPrimary">@color/windsor</item>
		<item name="colorPrimaryVariant">@color/sapphire</item>

		<!-- Secondary -->
		<item name="colorOnSecondary">@color/black</item>
		<item name="colorSecondary">@color/pavlova</item>
		<item name="colorSecondaryVariant">@color/shadow</item>

		<!-- Background -->
		<item name="colorOnBackground">@color/sapphire</item>
		<item name="color">@color/white</item>

		<!-- Surface -->
		<item name="colorOnSurface">@color/windsor</item>
		<item name="colorSurface">@color/white</item>

		<!-- Error -->
		<item name="colorOnError">@color/white</item>
		<item name="colorError">@color/carmine</item>

		<!-- Accent -->
		<item name="colorAccent">@color/dodger_blue</item>

		<!-- Status -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

		<!-- Other -->
		<item name="android:background">?attr/color</item>
		<item name="android:textColor">?attr/colorOnBackground</item>
	</style>
</resources>
