<!-- https://material.io/resources/color/#!/?view.left=0&view.right=0&primary.color=4B2E83&secondary.color=B7A57A -->
<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar" />
	<style name="Theme.App.Day">
		<!-- Primary -->
		<item name="colorOnPrimary">@color/white</item>
		<item name="colorPrimary">@color/windsor</item>
		<item name="colorPrimaryVariant">@color/sapphire</item>

		<!-- Secondary -->
		<item name="colorOnSecondary">@color/black</item>
		<item name="colorSecondary">@color/pavlova</item>
		<item name="colorSecondaryVariant">@color/shadow</item>

		<!-- Background -->
		<item name="colorOnBackground">@color/black</item>
		<item name="color">@color/white</item>

		<!-- Surface -->
		<item name="colorOnSurface">@color/black</item>
		<item name="colorSurface">@color/white</item>

		<!-- Error -->
		<item name="colorOnError">@color/white</item>
		<item name="colorError">@color/carmine</item>

		<!-- Accent -->
		<item name="colorAccent">@color/dodger_blue</item>

		<!-- Status Bar -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

		<!-- Toolbar -->
		<item name="android:textColorSecondary">?attr/colorOnPrimary</item>

		<!-- Other -->
		<item name="android:background">?attr/color</item>
		<item name="android:textColor">?attr/colorOnBackground</item>
	</style>
	<style name="Theme.App.DayNight" parent="Theme.App.Day" />
	<style name="Theme.Popup" parent="Widget.Material3.PopupMenu">
		<item name="android:background">?colorSurface</item>
		<item name="android:textColor">?attr/colorOnSurface</item>
		<item name="colorAccent">?attr/colorOnSurface</item>
		<item name="colorControlActivated">?attr/colorOnSurface</item>
		<item name="popupMenuBackground">?colorSurface</item>
		<item name="tint">?attr/colorOnSurface</item>
	</style>
</resources>
