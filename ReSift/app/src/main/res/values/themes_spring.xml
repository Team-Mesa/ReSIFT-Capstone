<!-- https://material.io/resources/color/#!/?view.left=0&view.right=0&primary.color=212121&secondary.color=64B5F6 -->
<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Theme.App.Spring">
		<!-- Primary -->
		<item name="colorOnPrimary">@color/black</item>
		<item name="colorPrimary">@color/azalea</item>
		<item name="colorPrimaryVariant">@color/viola</item>

		<!-- Secondary -->
		<item name="colorOnSecondary">@color/black</item>
		<item name="colorSecondary">@color/cruise</item>
		<item name="colorSecondaryVariant">@color/ziggurat</item>

		<!-- Background -->
		<item name="colorOnBackground">@color/black</item>
		<item name="color">@color/lavender_blush</item>

		<!-- Surface -->
		<item name="colorOnSurface">@color/black</item>
		<item name="colorSurface">@color/light_cyan</item>

		<!-- Error -->
		<item name="colorOnError">@color/white</item>
		<item name="colorError">@color/carmine</item>

		<!-- Accent -->
		<item name="colorAccent">@color/dodger_blue</item>

		<!-- Status Bar -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

		<!-- Toolbar -->
		<item name="android:textColorSecondary">?attr/colorOnPrimary</item>

		<!-- Other -->
		<item name="android:background">?attr/color</item>
		<item name="android:textColor">?attr/colorOnBackground</item>
	</style>
</resources>
