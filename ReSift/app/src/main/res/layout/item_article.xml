<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    >
    <ImageView
        android:id="@+id/image_view_article_favicon"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@drawable/ic_image_not_found"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />
    <TextView
        android:id="@+id/text_view_article_title"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_width="0dp"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toRightOf="@id/image_view_article_favicon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />
    <TextView
        android:id="@+id/text_view_article_authors"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_width="0dp"
        android:text="Authors"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/image_view_article_favicon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_article_title"
       />
    <TextView
        android:id="@+id/text_view_article_publication_date"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_width="0dp"
        android:text="Publish date"
        android:textColor="@color/link"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/image_view_article_favicon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_article_authors"
       />
    <TextView
        android:id="@+id/text_view_article_summary"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_width="0dp"
        android:text="Snippets"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/image_view_article_favicon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_article_publication_date"
       />
</androidx.constraintlayout.widget.ConstraintLayout>
