<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:paddingVertical="@dimen/padding_small_2"
	android:theme="@style/Surface"
	>
	<ImageView
		android:id="@+id/image_view_article_favicon"
		android:layout_width="@dimen/size_large_4"
		android:layout_height="@dimen/size_large_4"
		android:src="@drawable/ic_all_placeholder"
		/>
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_small"
		android:layout_weight="1"
		android:orientation="vertical"
		>
		<TextView
			android:id="@+id/text_view_article_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/all_placeholder"
			android:textSize="@dimen/text_large"
			android:textStyle="bold|italic"
			/>
		<TextView
			android:id="@+id/text_view_article_authors"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/all_placeholder"
			android:textSize="@dimen/text_medium"
			/>
		<TextView
			android:id="@+id/text_view_article_published_date"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/all_placeholder"
			android:textColor="?attr/colorOnSurface"
			android:textSize="@dimen/text_medium"
			/>
	</LinearLayout>
</LinearLayout>
