<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/Card.Body"
	android:orientation="vertical"
	tools:context=".fragments.PublisherOverviewCardBodyFragment"
	>
	<FrameLayout
		android:layout_width="match_parent" android:layout_height="wrap_content"
		>
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@drawable/shape_publisher_overview_card_body_rating"
			android:padding="@dimen/padding_small"
			android:theme="@style/Color.Secondary"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin_small_3"
				android:text="@string/publisher_overview_card_body_credibility_rating_label"
				android:textSize="@dimen/text_medium"
				android:textStyle="bold"
				app:layout_constraintBottom_toTopOf="@id/text_view_publisher_overview_card_body_credibility_rating"
				app:layout_constraintEnd_toStartOf="@id/frame_layout_publisher_overview_card_body_favicon_padding"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				/>
			<TextView
				android:id="@+id/text_view_publisher_overview_card_body_credibility_rating"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/margin_small_3"
				android:text="@string/all_placeholder"
				android:textSize="@dimen/text_medium"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toStartOf="@id/frame_layout_publisher_overview_card_body_favicon_padding"
				app:layout_constraintStart_toStartOf="parent"
				/>
			<FrameLayout
				android:id="@+id/frame_layout_publisher_overview_card_body_favicon_padding"
				android:layout_width="@dimen/size_large_6"
				android:layout_height="0dp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin_small_3"
				android:text="@string/publisher_overview_card_body_bias_rating"
				android:textSize="@dimen/text_medium"
				android:textStyle="bold"
				app:layout_constraintBottom_toTopOf="@id/text_view_publisher_overview_card_body_bias_rating"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/frame_layout_publisher_overview_card_body_favicon_padding"
				app:layout_constraintTop_toTopOf="parent"
				/>
			<TextView
				android:id="@+id/text_view_publisher_overview_card_body_bias_rating"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/margin_small_3"
				android:text="@string/all_placeholder"
				android:textSize="@dimen/text_medium"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/frame_layout_publisher_overview_card_body_favicon_padding"
				/>
		</androidx.constraintlayout.widget.ConstraintLayout>
		<com.google.android.material.imageview.ShapeableImageView
			android:id="@+id/shapeable_image_view_publisher_overview_card_body_favicon"
			android:layout_width="@dimen/size_large_6"
			android:layout_height="@dimen/size_large_6"
			android:layout_gravity="center_horizontal"
			android:padding="@dimen/padding_small"
			android:src="@drawable/ic_all_placeholder"
			app:shapeAppearanceOverlay="@style/Favicon"
			app:strokeWidth="@dimen/width_small_2"
			/>
	</FrameLayout>
	<com.ms.square.android.expandabletextview.ExpandableTextView
		android:id="@+id/expandable_text_view_publisher_overview_card_body_history"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:animDuration="200"
		app:maxCollapsedLines="5"
		>
		<TextView
			android:id="@id/expandable_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_small_2"
			android:text="@string/all_placeholder"
			android:textSize="@dimen/text_medium"
			/>
		<ImageButton
			android:id="@id/expand_collapse"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="end|bottom"
			android:background="@android:color/transparent"
			app:tint="?attr/colorOnSurface"
			/>
	</com.ms.square.android.expandabletextview.ExpandableTextView>
</LinearLayout>
