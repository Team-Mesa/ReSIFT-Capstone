<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/Body"
	tools:context=".fragments.HomeFragment"
	>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:padding="@dimen/padding_medium"
		>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_medium"
			android:gravity="center"
			android:text="@string/home_get_started_title"
			android:textColor="?attr/colorOnBackground"
			android:textSize="@dimen/text_large"
			/>
		<com.google.android.material.textfield.TextInputLayout
			android:id="@+id/text_input_layout_home_search_bar"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_medium"
			android:hint="@string/home_search_bar_hint"
			android:textColorHint="?attr/colorOnBackground"
			app:boxCornerRadiusBottomEnd="@dimen/radius_large_2"
			app:boxCornerRadiusBottomStart="@dimen/radius_large_2"
			app:boxCornerRadiusTopEnd="@dimen/radius_large_2"
			app:boxCornerRadiusTopStart="@dimen/radius_large_2"
			app:boxStrokeColor="@color/search_bar_box_stroke_color"
			app:boxStrokeErrorColor="?attr/colorError"
			app:endIconDrawable="@drawable/ic_home_search"
			app:endIconMode="custom"
			app:endIconTint="?attr/colorOnBackground"
			app:errorTextColor="?attr/colorOnError"
			app:hintTextColor="?attr/colorOnBackground"
			>
			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:imeOptions="actionSearch"
				android:inputType="text"
				android:textColor="?attr/colorOnBackground"
				/>
		</com.google.android.material.textfield.TextInputLayout>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_medium"
			android:drawablePadding="@dimen/padding_small_2"
			android:text="@string/home_get_started_body_line_1"
			android:textColor="?attr/colorOnBackground"
			android:textSize="@dimen/text_medium"
			app:drawableStartCompat="@drawable/ic_home_get_started_body_line_1"
			/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_medium"
			android:drawablePadding="@dimen/padding_small_2"
			android:text="@string/home_get_started_body_line_2"
			android:textColor="?attr/colorOnBackground"
			android:textSize="@dimen/text_medium"
			app:drawableStartCompat="@drawable/ic_home_get_started_body_line_2"
			/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_medium"
			android:drawablePadding="@dimen/padding_small_2"
			android:text="@string/home_get_started_body_line_3"
			android:textColor="?attr/colorOnBackground"
			android:textSize="@dimen/text_medium"
			app:drawableStartCompat="@drawable/ic_home_get_started_body_line_3"
			/>

	</LinearLayout>
</LinearLayout>
