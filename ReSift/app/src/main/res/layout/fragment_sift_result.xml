<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    android:padding="5dp"
    tools:context=".fragments.SiftResultFragment"
    >
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/ArticleCredibilityFragment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:name="edu.uw.minh2804.resift.fragments.PublisherOverviewFragment"
           />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/ArticleSummaryFragment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:name="edu.uw.minh2804.resift.fragments.ArticleSummaryCardFragment"
           />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/AdditionalSourcesFragment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:name="edu.uw.minh2804.resift.fragments.AdditionalSourcesCardFragment"
           />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/TracedSourceFragment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:name="edu.uw.minh2804.resift.fragments.TracedSourceCardFragment"
           />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/material_button_sift_result_share"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="@string/sift_result_share_button_label"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_share"
           />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
