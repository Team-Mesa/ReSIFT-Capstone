<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    tools:context=".fragments.SiftResultFragment"
    >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/ArticleCredibilityFragment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:name="edu.uw.minh2804.resift.fragments.ArticleCredibilityFragment"
            />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/ArticleSummaryFragment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:name="edu.uw.minh2804.resift.fragments.ArticleSummaryCardFragment"
            />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/AdditionalSourcesFragment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:name="edu.uw.minh2804.resift.fragments.AdditionalSourcesCardFragment"
            />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/TracedSourceFragment"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:name="edu.uw.minh2804.resift.fragments.TracedSourceCardFragment"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
