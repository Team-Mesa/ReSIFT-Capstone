<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:theme="@style/Surface"
	app:cardBackgroundColor="?attr/colorSurface"
	app:cardCornerRadius="@dimen/radius_large_2"
	app:cardElevation="@dimen/elevation_small"
	app:contentPaddingBottom="@dimen/padding_large"
	app:contentPaddingLeft="@dimen/padding_large"
	app:contentPaddingRight="@dimen/padding_large"
	app:contentPaddingTop="@dimen/padding_large"
	tools:context=".fragments.CardFragment"
	>
	<LinearLayout
		android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical"
		>
		<TextView
			android:id="@+id/text_view_card_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:drawablePadding="@dimen/padding_small"
			android:text="@string/all_placeholder"
			android:textSize="@dimen/text_large_2"
			app:drawableStartCompat="@drawable/ic_all_placeholder"
			/>
		<androidx.fragment.app.FragmentContainerView
			android:id="@+id/fragment_container_view_card_body" android:layout_width="match_parent" android:layout_height="wrap_content"
			/>
	</LinearLayout>
</androidx.cardview.widget.CardView>
